<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/styles/a4.css">
    <title>Document</title>
  </head>
  <!-- declare -->
  <% var value = 0; %>

  <body>
    <div class="page">
      <h1>Order details: <%= order.orderId ?? "ERROR" %></h1>
      <p style="font-weight: bold">
        Customer: <%= order.customer.firstName ?? "ERROR" %> <%=
        order.customer.lastName ?? "ERROR" %>
      </p>
      <% order.products.forEach(function(product) { %>
      <h3><%= product.name %></h3>
      <p style="font-weight: bold">Cost: <%= product.cost %>$</p>
      <p>
        <strong>Description: </strong><%= product.description %>
      </p>
      <% value += product.cost; }); %>
      <h3>Total: <%= value %>$ </h3>
    </div>
  </body>
</html>
